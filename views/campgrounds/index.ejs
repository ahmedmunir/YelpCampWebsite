<% include ../partials/header %>

<% if(success != "") { %>
    <p class="alert alert-success"><%=success%></p>
<% } %>

    <div class="container">
        <div class="jumbotron">
            <div class="container">
                <h1><i class="fas fa-campground"></i>  Welcom to CampGround Website</h1>
                <a href="/campgrounds/new" class="btn btn-primary">Add new campground</a>
            </div>
        </div>
        <div class="row">
            <% places.forEach(function (place){ %>
                <div class="col col-lg-3 col-md-6 col-sm-12">
                <div class="img-thumbnail">
                    <img class="img-thumbnail" src="<%= place.imagePath %>" alt="<%= place.name %>">
                    <h3 class="text-center"><%= place.name %></h3>
                    <a href="/campgrounds/<%=place._id%>" class="btn btn-primary btn-block">More Info</a>
                </div>
                </div>
            <% }) %>
        </div>
        
    </div>
<% include ../partials/footer %> 

