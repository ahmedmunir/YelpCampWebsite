<% include ../partials/header %>

<div class="container mt-4">
    <div class="row justify-content-center align-items-center">
        <form action="/campgrounds" method="POST" class="">
            <div class="form-group">
                <input class="form-control form-control-lg" type="text" name="name" placeholder="name of place" required>
            </div>
            <div class="form-group">
                <input class="form-control form-control-lg" type="number" name="price" placeholder="Enter price" required>
            </div>
            <div class="form-group">
                <input class="form-control form-control-lg" type="text" name="imagePath" placeholder="link of image" required>
            </div>
            <div class="form-group">
                <textarea name="description" class="form-control form-control-lg" rows="4"></textarea>
            </div>
            <button type="submit" class="btn btn-primary btn-lg btn-block">Add new campground</button>
        </form>
    </div>
</div>

<% include ../partials/footer %>